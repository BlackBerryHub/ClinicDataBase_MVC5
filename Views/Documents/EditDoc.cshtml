@model Lab6.Models.Documents

@{
    ViewBag.Title = "EditDoc";
}

<h2>EditDoc</h2>


@using (Html.BeginForm("EditDoc", "Documents", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="form-horizontal">
        <h4>Documents</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-success" })
        @Html.HiddenFor(model => model.ID_Documents)

        <div class="form-group">
            @Html.LabelFor(model => model.ID_Equipment, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID_Equipment, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ID_Equipment, "", new { @class = "text-danger" })
                @Html.ValidationMessage("doeqExist", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_Procedure, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID_Procedure, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ID_Procedure, "", new { @class = "text-danger" })
                @Html.ValidationMessage("doprExist", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Зберегти" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Повернутись до списку", "Index")
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
