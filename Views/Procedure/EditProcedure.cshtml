@model Lab6.Models.Procedure

@{
    ViewBag.Title = "EditProcedure";
}

<h2>EditProcedure</h2>


@using (Html.BeginForm("EditProcedure", "Procedure", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="form-horizontal">
        <h4>Procedure</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-success" })
        @Html.HiddenFor(model => model.ID_Procedure)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cost, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cost, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cost, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Зберегти" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Повернутись до списку", "Index")
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
